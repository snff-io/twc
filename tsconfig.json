{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./app",
    "sourceMap": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "moduleResolution": "NodeNext",
    "paths": {
      "*": [
        "node_modules/*",
        "app/*"
      ]
    },
  },
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}